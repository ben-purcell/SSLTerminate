{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "SSLTerminate": {
    "AllowedHosts": [ "blah-blah-test-host.xyz" ],
    "AccountEmail": "user@account.com"

    // this can be used instead of host - can be useful for running on localhost
    // keep in mind that on localhost you can create an ACME account/order with Let's Encrypt,
    // but would not be able to pass any of the challenges so would never get a cert
    // "TestHost": "blah-blah-test-host.xyz"
  }
}
